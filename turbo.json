{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["**/.env.*local"],
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
      ],
      "env": ["OPENAI_API_KEY", "FIRECRAWL_API_KEY", "DOCS_URL"]
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "docs#lint": {
      "dependsOn": ["^build", "build"]
    },
    "create-gensx#test": {
      "dependsOn": ["^build", "build", "gensx#build", "@gensx/openai#build"],
      "env": ["OPENAI_API_KEY"]
    },
    "gensx-home#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["DOCS_URL"]
    },
    "gensx-docs#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["DOCS_URL"]
    }
  }
}
