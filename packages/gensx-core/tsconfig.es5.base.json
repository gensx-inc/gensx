{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es5", "dom", "es2015.collection", "es2015.iterable"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/es5",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@gensx/core",
    "baseUrl": ".",
    "downlevelIteration": true,
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
