{
  "name": "@gensx/core",
  "version": "0.3.7",
  "description": "Build AI workflows using JSX.",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gensx-inc/gensx.git",
    "directory": "packages/gensx-core"
  },
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./jsx-runtime": {
      "types": "./dist/cjs/jsx-runtime.d.ts",
      "import": "./dist/esm/jsx-runtime.js",
      "require": "./dist/cjs/jsx-runtime.cjs"
    },
    "./jsx-dev-runtime": {
      "types": "./dist/cjs/jsx-dev-runtime.d.ts",
      "import": "./dist/esm/jsx-dev-runtime.js",
      "require": "./dist/cjs/jsx-dev-runtime.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rollup -c",
    "clean": "rm -rf dist",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:types": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "ai",
    "jsx",
    "workflow"
  ],
  "author": "GenSX Team",
  "license": "Apache-2.0",
  "dependencies": {
    "ini": "^5.0.0",
    "serialize-error": "^12.0.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "catalog:",
    "@rollup/plugin-node-resolve": "catalog:",
    "@rollup/plugin-typescript": "catalog:",
    "@types/ini": "^4.1.1",
    "@types/node": "catalog:packages",
    "@vitest/coverage-istanbul": "catalog:",
    "rollup": "catalog:",
    "vitest": "catalog:"
  },
  "publishConfig": {
    "access": "public"
  }
}
