{
  "name": "@gensx/cli",
  "version": "0.0.1",
  "description": "`GenSX command line tools",
  "bin": {
    "gensx": "./dist/run.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "directories": {
    "lib": "src",
    "bin": "bin"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf dist",
    "compile": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "tsx ./bin/run.ts",
    "start:node": "node ./bin/run",
    "package": "pkg -t $TARGET --compress GZip --out-path dist/pkg ./dist/run.cjs",
    "package:macos": "TARGET=node22-macos-arm64 pnpm package"
  },
  "keywords": [
    "typescript",
    "gensx",
    "cli"
  ],
  "author": "GenSX Team",
  "license": "Apache-2.0",
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/ini": "^4.1.1",
    "@types/node": "^20.12.12",
    "@vitest/coverage-istanbul": "^2.1.8",
    "@yao-pkg/pkg": "^6.3.0",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "consola": "^3.2.3",
    "ini": "^5.0.0",
    "open": "^10.0.3",
    "ora": "^8.2.0",
    "picocolors": "^1.0.1"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "pkg": {
    "scripts": "dist/run.cjs"
  }
}
