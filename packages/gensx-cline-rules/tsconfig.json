{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "esnext",
    "tsBuildInfoFile": ".tsbuildinfo",
    "outDir": "./dist",
    "baseUrl": ".",
    "types": [
      "@types/node"
    ],
    "emitDeclarationOnly": false
  },
  "include": [
    "src/**/*",
    "vitest.config.ts",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}