{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": ".tsbuildinfo",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "vitest.config.ts",
    "tests/**/*",
    "__mocks__/**/*",
    "tsup.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
